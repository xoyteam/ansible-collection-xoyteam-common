version: '3.9'

services:
  db:
    image: postgres:16
    restart: always
    # set shared memory limit when using docker-compose
    #shm_size: 128mb
    # or set shared memory limit when deploy via swarm stack
    #volumes:
    #  - type: tmpfs
    #    target: /dev/shm
    #    tmpfs:
    #      size: 134217728 # 128*2^20 bytes = 128Mb
    environment:
      PGDATA: /var/lib/postgres/16
      POSTGRES_PASSWORD: example
    volume:
        - {{ pgdkr_pgdata }}:/var/lib/postgres/16

  adminer:
    image: adminer
    restart: always
    ports:
      - 8080:8080

